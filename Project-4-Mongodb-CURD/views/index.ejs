<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store</title>
</head>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #e3f2fd;
        color: #263238;
        font-size: 16px;
        line-height: 1.6;
    }

    h2 {
        color: #0d47a1;
    }

    form {
        background: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        display: inline-block;
        border-top: 5px solid #0d47a1;
        width: 50%;
    }

    table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        background: #ffffff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    td,
    th {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background: #0d47a1;
        color: #ffffff;
        text-transform: uppercase;
    }

    td {
        background-color: #bbdefb;
    }

    td input {
        width: 90%;
        padding: 8px;
        border: 1px solid #90caf9;
        border-radius: 4px;
    }

    input[type="submit"] {
        background: #1e88e5;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    input[type="submit"]:hover {
        background: #1565c0;
    }

    tr:nth-child(even) {
        background: #e3f2fd;
    }

    tr:hover {
        background: #bbdefb;
    }

    button {
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        margin: 5px;
    }

    .edit {
        background: #10a117;
        color: white;
    }

    .edit:hover {
        background: #27b82e;
    }

    .delete {
        background: #d32f2f;
        color: white;
    }

    .delete:hover {
        background: #b71c1c;
    }
    th{
        text-align: center;
    }
</style>

<body>
    <div align="center">
        <h2>Book Information</h2>
        <form method="post" action="/add-book">
            <table>
                <tr>
                    <td>Title:</td>
                    <td><input type="text" name="title" required /></td>
                </tr>
                <tr>
                    <td>Author:</td>
                    <td><input type="text" name="author" required /></td>
                </tr>
                <tr>
                    <td>Country:</td>
                    <td><input type="text" name="country" required /></td>
                </tr>
                <tr>
                    <td>Language:</td>
                    <td><input type="text" name="language" required /></td>
                </tr>
                <tr>
                    <td>Genre:</td>
                    <td><input type="text" name="genre" required /></td>
                </tr>
                <tr>
                    <td>Price:</td>
                    <td><input type="number" name="price" required /></td>
                </tr>
                <tr>
                    <td>Published Year:</td>
                    <td><input type="number" name="publishedYear" required /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Add Book" /></td>
                </tr>
            </table>
        </form>

        <br />
        <br />
        <br />
        <div>
            <h2>Book List</h2>
            <table border="1">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Country</th>
                    <th>language</th>
                    <th>Genre</th>
                    <th>Price</th>
                    <th>Published Year</th>
                    <th colspan="2">Action</th>
                </tr>
                <% books.map((book, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= book.title %>
                        </td>
                        <td>
                            <%= book.author %>
                        </td>
                        <td>
                            <%= book.country %>
                        </td>
                        <td>
                            <%= book.language %>
                        </td>
                        <td>
                            <%= book.genre %>
                        </td>
                        <td>
                            <%= book.price %>
                        </td>
                        <td>
                            <%= book.publishedYear %>
                        </td>
                        <td>
                            <a href="/editbook/<%= book.id %>">
                                <button class="edit">Edit</button>
                            </a>
                        </td>
                        <td>
                            <a href="/deletebook/<%= book.id %>">
                                <button class="delete">Delete</button>
                            </a>
                        </td>
                    </tr>
                    <% }); %>
            </table>
        </div>
    </div>
</body>

</html>